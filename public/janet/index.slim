    function slide(slide){
      $('#thumbs').show();
      console.log($('#thumbs a:nth-child('+slide+')'));
      $('#thumbs a:nth-child('+slide+')').click();
      // $("#thumbs").data('lightGallery').slide(slide);
    }
    $(document).ready(function(){
      var thumbsHtml = '';
      // Generate the lightGallery from the default bootstrap one
      $.each($('.img-gal'), function(i,e){
        console.log(i,e);
        img = $(e).attr('href');
        caption = $(e).attr('data-sub-html');
        $(e).attr('href', '#'+(i+1));
        thumbsHtml += '<a href="'+img+'"  data-sub-html="'+caption+'"><img src="'+img+'"></a>'+"\n";
      });
      $('#thumbs').html(thumbsHtml);
      $lg = $("#thumbs");
      $lg.lightGallery({
        thumbnail: true
      });
      $lg.on('onBeforeOpen.lg',function(event){
        console.log('onBeforeOpen');
        // $('#thumbs').show();
      });
      $lg.on('onBeforeClose.lg',function(event){
        console.log('onBeforeClose');
        $('#thumbs').hide();
      });
      $('#thumbs').hide();

      $('a.img-gal').click(function(e,v){
        slide($(e.currentTarget).attr('href').substr(1));
      });
    })
